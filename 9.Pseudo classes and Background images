//Develop and demonstrate the use of pseudo classes and background images using CSS.\





body {
    font-family: Arial, sans-serif;
    background-color: #f0f0f0;
    margin: 0;
    padding: 20px;
    text-align: center;
}

.highlight:hover {
    color: white;
    background-color: #333;
    padding: 10px;
    border-radius: 5px;
}

ul li:nth-child(odd) {
    background-color: #ddd;
}
ul li:nth-child(even) {
    background-color: #bbb;
}

ul li:first-child {
    font-weight: bold;
}

ul li:last-child {
    color: red;
}

.background-example {
    width: 100%;
    height: 200px;
    background-image: url('https://via.placeholder.com/600x200');
    background-size: cover;
    background-position: center;
    margin-top: 20px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    font-size: 24px;
    font-weight: bold;
}

